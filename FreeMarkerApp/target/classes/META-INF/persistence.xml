    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>demo.freemarker.model.DtxTag</class>
    <class>demo.freemarker.model.Role</class>
    <class>demo.freemarker.model.UserRole</class>
    <class>demo.freemarker.model.User</class>
